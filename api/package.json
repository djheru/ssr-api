{
  "name": "api",
  "version": "0.1.0",
  "description": "Example API for a React SSR app",
  "main": "./dist/index.js",
  "author": "Philip Damra <djheru@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "chalk": "^2.3.2",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-restify-mongoose": "^4.3.0",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.2.0",
    "moment": "^2.21.0",
    "mongoose": "^5.0.10",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-config-google": "^0.9.1",
    "mocha": "^5.0.4",
    "npm-run-all": "^4.1.2",
    "proxyquire": "^2.0.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.6",
    "sinon-chai": "^3.0.0"
  },
  "scripts": {
    "lint": "eslint ./src/** ./tests/**",
    "pretest": "yarn run lint",
    "test": "mocha -r babel-core/register -r ./tests/framework.js --exit './tests/**/*.spec.js'",
    "clean": "rimraf dist && mkdir -p ./dist",
    "babel": "babel ./src -s -q -D -d ./dist",
    "babel:watch": "babel ./src -s -D -d ./dist --watch",
    "watch": "npm-run-all clean babel:watch",
    "build": "npm-run-all clean babel",
    "serve": "DEBUG=app:* NODE_ENV=development node ./dist/index.js",
    "start": "npm-run-all build serve",
    "pm2:dev": "pm2 start app.dev.json",
    "dev": "npm-run-all --parallel pm2:dev babel:watch logs",
    "stop": "pm2 stop ssr-api-dev",
    "monit": "pm2 monit",
    "logs": "pm2 logs"
  }
}
